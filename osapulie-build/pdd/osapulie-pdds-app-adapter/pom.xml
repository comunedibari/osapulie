								</configuration>
							</execution>
							<execution>
								<id>visuraServiziCimiteriali</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraServiziCimiterialiService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuraservizicimiteriali</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraPubblicheAffissioni</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraPubblicheAffissioniService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visurapubblicheaffissioni</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraImpostaInsegnePubblicita</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraImpostaInsegnePubblicitaService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuraimpostainsegnepubblicita</packageSpace>
								</configuration>
							</execution>
							<!-- Documenti -->
							<execution>
								<id>visuraDocumentiAnagrafe</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/documenti</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraDocumentiAnagrafeService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.documenti.anagrafe</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraDocumentiTributi</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/documenti</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
