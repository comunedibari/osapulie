									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuraposizioneelettorale</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraVariazioniDomicilio</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/anagrafiche</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraVariazioniDomicilioService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuravariazionidomicilioservice</packageSpace>
								</configuration>
							</execution>
							<!-- Tributi -->
							<execution>
								<id>visuraTassaRifiuti</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraTassaRifiutiService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuratassarifiuti</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraTassaImmobili</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraTassaImmobiliService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuratassaimmobili</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraOsapPermanente</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
									<outputDirectory>${basedir}/src/main/java</outputDirectory>
									<wsdlFiles>
										<wsdlFiles>visuraOsapPermanenteService.wsdl</wsdlFiles>
									</wsdlFiles>
									<packageSpace>it.osapulie.pdds.ws.client.visuraosappermanente</packageSpace>
								</configuration>
							</execution>
							<execution>
								<id>visuraOsapTemporanea</id>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
								<configuration>
									<sourceDirectory>${basedir}/src/main/resources/wsdl/tributi</sourceDirectory>
