<?xml version="1.0" encoding="UTF-8"?>

<!--
	Standard portlet metadata per OS Apulie.
 -->
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

	<!--
		Portlet esposte da questa web application.
	 -->
	<portlet>
		<portlet-name>osapulie-listaservizi-fe</portlet-name>
		<display-name>OSApulie Lista Servizi Front-End Portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.listaservizife</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>osapulie-listaservizi-be</portlet-name>
		<display-name>OSApulie Lista Servizi Back-End Portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.listaservizibe</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>osapulie-menuservizi</portlet-name>
		<display-name>OSApulie Menu Servizi Front-End Portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.menuservizi</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>osapulie-infoservizio</portlet-name>
		<display-name>OSApulie Informazioni Servizio Front-End Portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.infoservizio</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>osapulie-linkservizio</portlet-name>
		<display-name>OSApulie Link Servizio Front-End Portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.linkservizio</resource-bundle>
	</portlet>
	<!--
		Mappatura degli attributi utente che vogliamo il portale passi a Spring Security:
		dipendono dal particolare portale (?) (questi sono per Liferay).
	 -->
	<user-attribute>
		<name>user.login.id</name>
	</user-attribute>
	<user-attribute>
		<name>user.name</name>
	</user-attribute>
	<user-attribute>
		<name>user.name.full</name>
	</user-attribute>
	<default-namespace>http://www.linksmt.it/osapulie/params</default-namespace>
</portlet-app>