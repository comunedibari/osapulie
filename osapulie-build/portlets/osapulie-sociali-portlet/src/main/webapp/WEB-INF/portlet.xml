<?xml version="1.0" encoding="UTF-8"?>
<!--
	Standard portlet metadata per OS Apulie. 
 -->
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	
	<!-- 
		Portlet esposte da questa web application.
	 -->
	<portlet>
		<portlet-name>anzianicaseriposo</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.anzianicaseriposo</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>trasportoachiamata</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.trasportoachiamata</resource-bundle>
	</portlet>
	<portlet>
		<portlet-name>anzianiassistenza</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.anzianiassistenza</resource-bundle>
	</portlet>
	<portlet>
	<portlet-name>serviziorifiuti</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.serviziorifiuti</resource-bundle>
	</portlet>
	<portlet>
	<portlet-name>volontariato</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.volontariato</resource-bundle>
	</portlet>
	<portlet>
	<portlet-name>promosociale</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.promosociale</resource-bundle>
	</portlet>
	<portlet>
	<portlet-name>disabiliparcheggio</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>messages.disabiliparcheggio</resource-bundle>
	</portlet>
	<!-- 
		Mappatura degli attributi utente che vogliamo il portale passi a Spring Security:
		dipendono dal particolare portale (?) (questi sono per Liferay).
	 -->
	<user-attribute>
		<name>user.login.id</name>
	</user-attribute>
	<user-attribute>
		<name>user.name</name>
	</user-attribute>
	<user-attribute>
		<name>user.name.full</name>
	</user-attribute>
	<default-namespace>http://www.linksmt.it/osapulie/params</default-namespace>
</portlet-app>
